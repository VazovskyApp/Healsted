<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_graph"
    app:startDestination="@id/dashboardFragment">

    <include app:graph="@navigation/add_pill_graph" />

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="app.vazovsky.mypills.presentation.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_add_pill"
            app:destination="@id/add_pill" />
    </fragment>
</navigation>