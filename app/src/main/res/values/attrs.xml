<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateViewFlipper">
        <attr name="loadingLayoutRes" format="reference" />
        <attr name="errorLayoutRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="loopAnimation" format="boolean" />
        <attr name="isDarkMode" format="boolean" />
        <attr name="emptyAnimationSrc" format="reference" />
        <attr name="emptyImageSrc" format="reference" />
        <attr name="emptyTitle" format="reference" />
        <attr name="emptyComment" format="reference" />
        <attr name="emptyButton" format="reference" />
    </declare-styleable>

    <declare-styleable name="ValidationTextInputLayout">
        <attr name="errorEmpty" format="string" />
        <attr name="errorMalformed" format="string" />
        <attr name="validationPattern" format="string" />
        <attr name="emptyCheck" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DatePickerTimeline">
        <attr name="monthTextColor" format="color" />
        <attr name="dateTextColor" format="color" />
        <attr name="dayTextColor" format="color" />
        <attr name="disabledColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EmojiRatingBar">
        <attr name="showText" format="boolean" />
        <attr name="showAllText" format="boolean" />
        <attr name="titleColor" format="color" />
        <attr name="android:fontFamily"/>
        <attr name="defaultValue" format="enum">
            <enum name="EMPTY" value="0" />
            <enum name="AWFUL" value="1" />
            <enum name="BAD" value="2" />
            <enum name="OKAY" value="3" />
            <enum name="GOOD" value="4" />
            <enum name="GREAT" value="5" />
        </attr>
    </declare-styleable>

    <attr name="errorSnackbarBackgroundColor" format="reference|color" />
    <attr name="infoSnackbarBackgroundColor" format="reference|color" />
</resources>