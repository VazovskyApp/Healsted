<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/blackAlienWare</item>
        <item name="colorSecondary">@color/blackAlienWare</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/blackAlienWare</item>
    </style>
</resources>